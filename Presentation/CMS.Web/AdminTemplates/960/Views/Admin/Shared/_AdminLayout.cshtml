<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<script src="@Url.Content("~/Assets/js/jquery-1.7.1.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Assets/js/jquery.tmpl.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Assets/js/jquery.960Grid.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Assets/js/adapt.config.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Assets/js/adapt.min.js")" type="text/javascript"></script>
	<link href="@Url.Content("~/Assets/css/site.css")" rel="stylesheet" type="text/css" />
	@if (IsSectionDefined("header")) {
		@RenderSection("header")
 }
</head>
<body>
	<div class="top-margin">
		&nbsp;</div>
	<div class="container_24 container">
		<div class="header">
			<div class="grid_24 header-bar">
				<div class="grid_6 alpha company-name ">
					CompanyName</div>
				<div class="grid_4 omega logout prefix_14 suffix_0">
					Logout</div>
			</div>
			<div class="clear">
				&nbsp;</div>
		</div>
		<div class="menu-bar">
			@Html.Action("Menus", "Home")
		</div>
		@RenderBody()
		<div class="clear">
			&nbsp;</div>
		<div class="footer">
			<div class="grid_24 footer-bar">
				Copyright CompanyName
			</div>
			<div class="clear">
				&nbsp;</div>
		</div>
		<div class="clear">
			&nbsp;</div>
	</div>
	<div class="bottom-margin">
		&nbsp;</div>
</body>
<script src="@Url.Content("~/Assets/js/jquery-ui-1.8.16.custom.min.js")" type="text/javascript"></script>
@if (IsSectionDefined("bottom")) {
	@RenderSection("bottom")
}
<script type="text/javascript">
	$(document).ready(function () {
		$(".menu-bar ul:first").show();
	});
</script>
@*@{Html.RenderPartial("_grid960overlay");}*@
</html>
