@using CMS.Web.FrameWork.Helpers
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}
<div class="grid_24">
	<div class="grid_18 omega">
		<h2>
			Module Manager</h2>
	</div>
	<div class="grid_6 alpha">
		<input type="button" id="edit" value="Edit" class="btn btn-blue" />
	</div>
	<div class="clear">
		&nbsp;
	</div>
</div>
@Html.Grid960(new Grid960Option {
	ID = "ModuleList",
	Grid960Length = 24,
	Url = "/Admin/Module/List",
	IsPaging = true,
	SortName = "ModuleID",
	SortOrder = CMS.Web.FrameWork.Models.SortOrder.Asending,
	Parameters = new List<Grid960Parameter>(){
												 new Grid960Parameter { Name = "ModuleID", Value= "1"}
											},
	Columns = new List<Grid960Column> { 
											 new Grid960Column { HeaderTemplate = Html.CheckBox("SelectAll", false).ToHtmlString(), Template = Html.CheckBox("ModuleID", false).ToHtmlString(), Grid960Length = 1, DataFieldName = "ModuleID", Align = Align.Center }
											 ,new Grid960Column { DisplayName = "Module", Grid960Length = 9, DataFieldName = "ModuleName", SortName = "ModuleName", Template  = "<a href='javascript:MODULE.open(${ModuleID});'>${ModuleName}</a>" }
											 ,new Grid960Column { DisplayName = "Type", Grid960Length = 3, DataFieldName = "ModuleTypeName", SortName = "ModuleTypeName" }
											 ,new Grid960Column { DisplayName = "Position", Grid960Length = 3, DataFieldName = "PositionName", SortName = "PositionName" }
											 ,new Grid960Column { DisplayName = "Access Level", Grid960Length = 2, DataFieldName = "AccessLevelName", SortName = "AccessLevelName" }
											 ,new Grid960Column { DisplayName = "Enable", Grid960Length = 2, DataFieldName = "IsEnable", SortName = "IsEnable", Template = "{{if row.IsEnable==true}}<img src='" + Url.Content("~/Assets/images/tick.png") + "' />{{/if}}" }
											 ,new Grid960Column { DisplayName = "Order", Grid960Length = 2, DataFieldName = "SortOrder", SortName = "SortOrder" }
											 ,new Grid960Column { DisplayName = "ID", Grid960Length = 2, DataFieldName = "ModuleID", SortName = "ModuleID" }
										},
	OnSuccess = "MODULE.onSuccess",
	OnError = "MODULE.onError"
})
@section bottom{
	<script src="@Url.Content("~/Assets/js/Module.js")" type="text/javascript"></script>
